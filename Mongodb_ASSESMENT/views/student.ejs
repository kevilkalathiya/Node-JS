<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <form class="w-25 mt-5 mx-auto" id="form" onsubmit="submitHandler()">
      <h3 class="mb-4">student details form</h3>
      <div class="form-outline mb-4">
        <label class="form-label" for="form4Example1">stud_id</label>
        <input
          type="text"
          id="form4Example1"
          class="form-control"
          name="stud_id"
        />
      </div>

      <div class="form-outline mb-4">
        <label class="form-label" for="form4Example2">stud_name</label>
        <input
          type="text"
          id="form4Example2"
          class="form-control"
          name="stud_name"
        />
      </div>

      <div class="form-outline mb-4">
        <label class="form-label" for="form4Example3">stud_email</label>
        <input
          type="email"
          id="form4Example3"
          class="form-control"
          name="stud_email"
        />
      </div>

      <div class="form-outline mb-4">
        <label class="form-label" for="form4Example4">stud_birthdate</label>
        <input
          type="date"
          id="form4Example4"
          class="form-control"
          name="stud_birthdate"
        />
      </div>

      <!-- Submit button -->

      <button type="submit" class="btn btn-primary btn-block mb-4">
        Submit
      </button>
    </form>
  </body>
</html>

<script>
  function submitHandler() {
    event.preventDefault();

    let result = {
      stud_id: document.getElementById("form4Example1").value,
      stud_name: document.getElementById("form4Example2").value,
      stud_email: document.getElementById("form4Example3").value,
      stud_birthdate: document.getElementById("form4Example4").value,
    };

    fetch("/api/v1/student", {
      method: "POST",
      headers: { "Content-Type": "application/json" },
      body: JSON.stringify(result),
    })
      .then((res) => res.json())
      .then((response) => console.log(response));
  }
</script>
